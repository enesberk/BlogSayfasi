<div class="container">
    <div class="row">
        <div class="col-4">
            <label for="addName">Öğrenci Adı :</label>
        </div>
        <div class="col-8 text-center">
            <input class="w-100" type="text" id="addName">
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <label for="addNo">Öğrenci No'su :</label>
        </div>
        <div class="col-8 text-center">
            <input class="w-100" type="text" id="addNo">
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <label for="addClassName">Öğrenci Sınıfı :</label>
        </div>
        <div class="col-8 text-center">
            <input class="w-100" type="text" id="addClassName">
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-12 text-center">
            <button class="btn btn-primary w-25" id="addBtn" type="button">Ekle</button>
        </div>
    </div>
    <hr>
    {{#if students.length}}
    {{#each students}}
    <div class="row">
        <div class="col-3">
            {{name}}
        </div>
        <div class="col-3">
            {{name}}
        </div>
        <div class="col-3">
            {{className}}
        </div>
        <div class="col-3">
            <button class="btn btn-info" type="button" onclick="updateStudent('{{_id}}')">Düzenle</button>
            <button class="btn btn-danger" type="button" onclick="deleteStudent('{{_id}}')">Sil</button>
        </div>
    </div>
    {{/each}}
    {{else}}
    <div class="text-center">
        <b class="text-center">Kayıt bulunamadı</b>
    </div>
    {{/if}}
</div>